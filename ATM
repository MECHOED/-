#include<stdio.h>
#include<string.h>
#include<stdlib.h>

struct Account{
	char username[100];
	char password[100];
	float money;
	struct Account *next;
};
typedef struct Account Account;

Account *head=NULL;//指向头结点 
Account *tail=NULL;//指向尾结点 

Account *curAccount=NULL;//记录当前账户 
void jm(){
	printf("选择界面语言\n");
	printf("中文按1，English please press 2,一夜暴富请按3\n");
	int a;
	scanf("%d",&a);	
}
//找到返回1，否则返回0 
int findAccount(Account a){//寻找账户
	Account *curp=head;
	while(curp!=NULL){
		if((strcmp(curp->username,a.username)==0)&&(strcmp(curp->password,a.password)==0)){
			curAccount=curp; 
			return 1;
		}
		curp=curp->next;
	}
	return 0;
}

void updatePassword(){//修改密码
	printf("请输入旧密码：");
	char oldPassword[100];
	char pass[100];
	scanf("%s",oldPassword);
	for(;1;){
		if(strcmp(oldPassword,pass)!=0){
			printf("请输入新密码：");
			scanf("%s",&pass[100]);
			if(strcmp(oldPassword,pass)!=0){
				printf("OK");
				strcpy(curAccount->password,pass);
				FILE *pf=fopen("D://doc.txt","w");
				if(pf==NULL){
					printf("错误");
				}
				fprintf(pf,"%s %s",curAccount->username,curAccount->password);
				fclose(pf);
				break;
			}
			else{
				printf("NO");
			}
		}
		else{
		printf("密码错误！不能修改！\n");
		}
	}
}
void signIn(){//登录账户
	int i;
	Account a;
	for(i=0;i<3;i++){ 
		printf("请输入账号：");
		scanf("%s",a.username);
		
		printf("请输入密码：");
		scanf("%s",a.password);
		
		if(findAccount(a)){
			printf("登录成功！\n");
			updatePassword();
			break;
		}
		else{
			printf("登录失败！\n");
		}
	}
} 
void pay(){
	printf("请输入取款金额：");
    int money;
	scanf("%d",&money);
	//验证金额
	if(curAccount->money>=money){
		printf("取款成功！\n");
		curAccount->money-=money;
	} 
	else{
	    printf("余额不足！\n");
	}
}
int loadData(){//创建数据
	FILE* fp=fopen("D:/atm.txt","r");
	if(fp==NULL){
		return 0;
	}
	else{
		while(!feof(fp)){
			//创建结点
			Account * newNode=(Account *)malloc(sizeof(Account)); 
			
			//结点初始化
			newNode->next=NULL;
			fscanf(fp,"%s %s %lf\n",newNode->username,newNode->password,newNode->money);
			
			//添加结点到链表 
			if(head==NULL){
				head=newNode;
				tail=newNode;
			}
			else{
				tail->next=newNode;
				tail=newNode;
			}
		}
		return 1;
	}
	fclose(fp);
}
void saveMoney(){
	printf("请输入存款金额：");
	int money;
	scanf("%d",&money);
	printf("存款成功！\n");
	curAccount->money+=money;
}
int main(){
	int status=loadData(); 
	signIn();
	return 0;
}
